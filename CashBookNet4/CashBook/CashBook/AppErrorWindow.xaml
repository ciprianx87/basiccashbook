<Window x:Class="CashBook.AppErrorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AppErrorWindow" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions >
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Ne pare rau, a avut loc o eroare"/>
        <TextBox x:Name="txtErrorMessage" Grid.Row="1" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" VerticalScrollBarVisibility="Visible"/>
        <Button Content="Ok" Grid.Row="2" Width="100" Height="30" x:Name="btnOk" Click="btnOk_Click"/>
    </Grid>
</Window>
