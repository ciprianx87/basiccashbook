<Window x:Class="CashBook.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="650" Width="855">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0" x:Name="mainMenu">
            <MenuItem Header="Fisier">
                <MenuItem Header="Iesire"></MenuItem>
            </MenuItem>
            <MenuItem Header="Cataloage">
                <MenuItem Header="Date Societate" Click="MenuItem_Click_1"></MenuItem>
                <MenuItem Header="Definire registre de casa" Click="MenuItem_Click_2"></MenuItem>
                <MenuItem Header="Reglementari legale" Click="MenuItem_Click_3"></MenuItem>
            </MenuItem>
            <MenuItem Header="Registre de casa">
                <MenuItem Header="Registru de casa in lei"></MenuItem>
                <MenuItem Header="Registru de casa in valuta"></MenuItem>
            </MenuItem>

        </Menu>
        <ContentControl Grid.Row="1" x:Name="contentControl" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
    </Grid>
</Window>
