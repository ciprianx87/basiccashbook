    <Style TargetType="Button" x:Key="EditButtonStyle">
        <Setter Property="Content">
            <Setter.Value>
                <StackPanel>
                    <Image Source="/CashBook.Controls;component/Images/editButton.png" Stretch="Uniform"  Width="30" Height="15"/>
