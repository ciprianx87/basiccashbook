<Window x:Class="TaxCalculator.Controls.Popups.ChooseTaxCompletionName"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True"
        Title="Nume" Height="150" Width="600">
    <Border CornerRadius="10" BorderThickness="1" BorderBrush="Black">
        <Grid>
            <TextBlock Height="Auto" HorizontalAlignment="Left" Margin="12,12,0,0"  Text="Introduceti numele:" VerticalAlignment="Top" FontSize="20"/>
            <TextBox Height="Auto" HorizontalAlignment="Left" Margin="12,41,0,0" Name="txtName" VerticalAlignment="Top" Width="541" FontSize="20"
                     FocusManager.FocusedElement="{Binding RelativeSource={RelativeSource Self}}"/>
            <StackPanel Orientation="Horizontal" Margin="0,80,0,0" HorizontalAlignment="Center">
                <Button Content="Salvare" Height="23" HorizontalAlignment="Center" Name="btnSave" VerticalAlignment="Top" Width="75" Click="btnSave_Click" />
                <Button Content="Inchide" Height="23" HorizontalAlignment="Center" Margin="50,0,0,0" Name="btnClose" VerticalAlignment="Top" Width="75" Click="btnClose_Click" />
            </StackPanel>
        </Grid>
    </Border>
</Window>
