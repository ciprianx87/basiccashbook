<Window x:Class="CashBook.Controls.Popups.InformationPopup"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         ResizeMode="NoResize" WindowStyle="None" AllowsTransparency="True"
Background="Transparent"
        Title="SettingsSavedPopup" Height="150" Width="300">
    <Border CornerRadius="10" BorderThickness="1" BorderBrush="Black"  Background="#FFF0F0F0">
        <Grid Background="Transparent" Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="txtMessage" Text="" HorizontalAlignment="Center" FontSize="16"
                       VerticalAlignment="Center" TextWrapping="Wrap" Margin="10" TextAlignment="Center"/>
            <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                <Button Content="Ok" Width="70" FontSize="16" Click="Button_Click" Margin="0,0,0,10"></Button>
            </StackPanel>
        </Grid>
    </Border>

</Window>
